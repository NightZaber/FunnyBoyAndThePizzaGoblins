// room script file

function room_Load()
{
  SetGlobalInt(1, 0); // disable walk
  mouse.DisableMode(eModeWait);
  mouse.DisableMode(eModePickup);
  mouse.DisableMode(eModeLookat);
  mouse.DisableMode(eModeUseinv);
  mouse.DisableMode(eModeWalkto);
  mouse.DisableMode(eModeTalkto);
  
  gIconbar.Visible = false;
  
  tiscreen_title.Transparency = 100;
  
  SetViewport(0,  0);
  
  mouse.Visible = false;
}
  


function room_AfterFadeIn()
{
  //FADE OUT THINGS
  
  //OPENING NARRATION
  Wait(20);
  aMain_Title.Play();
  
  Wait(100);
  title_sign01.Visible = true;
  Wait(140);
  

  Wait(80);
  title_sign02.Visible = true;
  Wait(160);
  
  Wait(20);
  
  //NOW WE PAN DOWN
  // Active Pan Down Function
  tiscr_mavishspr.SetView(5);
  tiscr_mavishspr.Animate(0, 6, eRepeat, eNoBlock);
  
  int ypos = 0;
  while (ypos < 200) 
  {
    SetViewport(0, ypos);
    Wait(1);
    ypos++;
    ypos++;
    oObject0.Y--;
   
  }
  
  int mtrans2 = 100;
  while (mtrans2 > 0)
    {
      mtrans2--;
      tiscreen_title.Transparency = mtrans2;
      Wait(1);
    }
  Wait(20);
  gIconbar.Visible = true;
}